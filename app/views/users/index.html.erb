<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-4">
            <%= render 'layouts/user_info', post_user: @post_user, newpost: @newpost, user: @post_user %>
        </div>
        
        <div class="col-md-6 offset-md-1 mx-auto">
            <h2>Users</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                
                <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td>
                            <%= attachment_image_tag user, :profile_image,format: 'jpeg', size: "80x80", fallback: "no-user-image.png", class: "rounded-circle" %>
                        </td>
                        <td><%= user.name %></td>
                        <td><%= link_to "Show", user_path(user) %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>