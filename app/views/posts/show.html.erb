<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-4">
            <%= render 'layouts/user_info', post_user: @post_user, newpost: @newpost, user: @post_user %>
        </div>
        
        <div class="col-md-7 offset-md-1">
            <h2>Post detail</h2>
            <div class="card-list-container">
                <div class="card w-100 mx-auto mt-4">
                    <%= link_to post_path(@post) do %>
                        <%= attachment_image_tag @post, :image, format: 'jpeg', size: "500x400", class: "card-img-top"; %>
                    <% end %>

                <div class="card-body">
                    <div class="col-2">
                        <%= attachment_image_tag @post.user, :profile_image, format: 'jpeg', size: "80x80", fallback: "no-user-image.png", class: "mt-3 rounded-circle"; %>
                    </div>

                    <div class="col-10">
                        <p class="card-title">
                            <%= link_to post_path(@post), class: "text-dark" do %>
                                Title: <%= @post.title %>
                            <% end %>
                        </p>
                        <p class="card-text">
                            Opinion: <%= @post.body %>
                        </p>
                        <span><i class="fa-solid fa-circle-user"></i> By <%= @post.user.name %> | </span>
                        <span><i class="fa-solid fa-heart"></i>#{@post.post_likes.count} いいね"</span>
                        <% if @post.user == current_user %>
                        <span>
                            <%= link_to "Edit", edit_post_path(@post), class: "btn btn-sm btn-outline-success" %>
                        </span>
                        <span>
                            <%= link_to "Destroy", post_path(@post), class: "btn btn-sm btn-outline-danger", method: :delete, method: :delete, "data-confirm" => "本当に消しますか？" %>
                        </span>
                        <% else %>
                        <span></span>
                        <span></span>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>