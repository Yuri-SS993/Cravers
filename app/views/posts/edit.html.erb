<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing the post</h1>
            <%= form_with model: @post, local: true do |f| %>
            <%= render 'layouts/error_messages', model: @post %>
            <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
            </div>
            
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control post_title" %>
            </div>
            
            <div class="form-group">
                <%= f.label :opinion %>
                <%= f.text_area :body, class: "form-control post_body" %>
            </div>
            
            <div class="form-group">
                <%= f.submit "Update the post", class: "btn btn-outline-info" %>
            </div>
            <% end %>
            <%= link_to 'Show', post_path(@post), class: "text-dark" %> | 
            <%= link_to 'Back', posts_path, class: "text-dark" %>
        </div>
    </div>
</div>