<% posts.each do |post| %>
    <div class="card w-auto h-auto mx-auto mt-4 shadow-sm">
        <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :image, format: 'jpeg', class: "card-img-top img-responsive" %>
        <% end %>

        <div class="card-body">
            <div class="col-2">
                <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', size: "80x80", fallback: "no-user-image.png", class: "mt-3 rounded-circle" %>
            </div>

            <div class="col-10">
                <p class="card-title">
                    <%= link_to post_path(post), class: "text-dark" do %>
                        Title: <%= post.title %>
                    <% end %>
                </p>
                
                <p class="card-text">
                    Opinion: <%= post.body %>
                </p>
            
                <p><i class="fa-solid fa-circle-user"></i> By <%= post.user.name %></p>
                
                <p id ="like_<%= post.id %>">
                    <% if !user_signed_in? %>
                        <i class="fa-regular fa-heart"></i>
                        <%= post.likes.length %> いいね
                    <% elsif current_user.liked_by?(post.id) %>
                        <%= link_to post_like_path(post, post.likes), class: "heart", method: :delete, remote: true do %>
                            <i class="fa-solid fa-heart"></i>
                        <% end %>
                        <%= post.likes.length %> いいね
                    <% else %>
                        <%= link_to post_likes_path(post), class: "heart", method: :post, remote: true do %>
                            <i class="fa-regular fa-heart"></i>
                        <% end %>
                        <%= post.likes.length %> いいね
                    <% end %>
                </p>
            </div>
        </div>
    </div>
<% end %>