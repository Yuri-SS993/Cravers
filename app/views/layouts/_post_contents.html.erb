<% posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
        <%= link_to post_path(post.id) do %>
            <%= attachment_image_tag post, :image, format: 'jpeg', size: "300x300", class: "card-img-top"; %>
        <% end %>

        <div class="card-body">
            <div class="col-2">
                <%= attachment_image_tag post.user, :profile_image, format: 'jpeg', size: "80x80", fallback: "default-image.jpg", class: "mt-3 rounded-circle"; %>
            </div>

            <div class="col-10">
                <p class="card-title">
                    <%= link_to post_path(post.id), class: "text-dark" do %>
                        Title: <%= post.title %>
                    <% end %>
                </p>
                <p class="card-text">
                    Opinion: <%= post.body %>
                </p>
                <span><i class="fa-solid fa-circle-user"></i> By <%= post.user.name %> | </span>
                <span><i class="fa-solid fa-heart"></i> "#{post.post_likes.count} いいね"</span>
            </div>
        </div>
    </div>
<% end %>