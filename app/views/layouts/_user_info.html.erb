<h2>User info</h2>
<table class="table">
    <tr>
        <%= attachment_image_tag post_user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no-user-image.png", class: "m-1 rounded-circle"; %>
    </tr>
    <tr>
        <th>name</th>
        <th><%= post_user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= post_user.introduction %></th>
    </tr>
</table>

<div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
    <% end %>
</div>

<h2 class="mt-3">New post</h2>
    <%= form_with model:newpost, url: posts_path, html: {method: :post}, local: true do |f| %>
        <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
        </div>
    
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control post_title" %>
        </div>
    
        <div class="form-group">
            <%= f.label :opinion %>
            <%= f.text_area :body, class: "form-control post_body" %>
        </div>
    
        <div class="form-group">
            <%= f.submit "Create new post", class: "btn btn-success" %>
        </div>
    <% end %>